---
import Header from "../components/Header.astro";

import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div id="root">
    <Header />
    <main>
      <div class="half-pane-wrapper">
        <div class="half-pane grow">
          <h1>
            Hi, I'm John ðŸ‘‹
          </h1>
          <h2>
            I'm shaping light to look through optical <mark>fibres</mark>.
          </h2>
          <p>
            Why don't you check out my <a href="/blog">blog</a>?
          </p>
        </div>
        <div class="half-pane">
          <img
            class="avatar"
            src="https://via.placeholder.com/400"
            alt="Picture of John Kilpatrick"
          />
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
<style lang="scss">
  #root {
    width: 100vw;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .half-pane-wrapper {
    display: flex;
    align-items: center;
    padding: 1em;
    gap: 10em;
  }

  .half-pane {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
  }

  .grow {
    flex-grow: 1;
  }

  img.avatar {
    border-radius: 50%;
    height: 100%;
    max-height: 50vh;
  }

  #root {
    font-family: "Inter", sans-serif;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0;
  }

  main {
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    flex-grow: 1;
    max-width: 80vw;
  }

  :root {
    --primary-color: #e50914;
  }
</style>
