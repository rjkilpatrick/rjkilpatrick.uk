<style lang="scss">
  .half-pane-wrapper {
    display: flex;
    align-items: center;
    padding: 1em;
    flex-direction: column-reverse;
    @media screen and (min-width: 768px) {
      gap: 2em;
      flex-direction: row;
    }
  }

  .half-pane {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
  }

  .grow {
    flex-grow: 1;
  }

  img.avatar {
    border-radius: 50%;
    height: 100%;
    max-height: 30vh;
    @media screen and (min-width: 768px) {
      max-height: 50vh;
    }
  }

  .main {
    font-family: "Inter", sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0;
    padding: 0;
    justify-content: center;
    width: 100%;
    flex-grow: 1;
    max-width: 80vw;
  }

  :root {
    --primary-color: #e50914;
  }
</style>
