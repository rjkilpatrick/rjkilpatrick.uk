---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout>
  <div class="main">
    <div class="half-pane-wrapper">
      <div class="half-pane grow">
        <h1>Hi, I'm John ðŸ‘‹</h1>
        <h2>
          I'm an Optical Engineer at <a href="//andor.com/">Oxford Instruments Andor</a>.
        </h2>
        <p>
          Why don't you check out my <a href="/post">blog</a>?
        </p>
      </div>
      <div class="half-pane">
        <img
          class="avatar"
          src="/assets/img/rjkilpatrick.jpg"
          alt="Picture of John Kilpatrick"
        />
      </div>
