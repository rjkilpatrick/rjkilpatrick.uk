---
import Icon from "astro-icon";

const { iconName, backgroundColor, accentColor } = Astro.props;
---

<aside class="content">
  <div class="aside-icon">
    <Icon name={iconName} class="icon" />
  </div>
  <section class="aside-section">
    <slot />
  </section>
</aside>
<style lang="scss" define:vars={{ accentColor, backgroundColor }}>
  aside {
    margin: 0 -1.5rem;
    padding: 1rem 1.5rem;
    position: relative;
    background-color: var(--backgroundColor);
    border-left: 5px solid var(--accentColor);
  }

  .aside-icon {
    width: auto;
    position: absolute;
    top: 0px;
    left: 0px;
    transform: translate(calc(-50% - 1.5px), -50%);
    padding: 0.5rem;
    border-radius: 50%;

    background: #fff;
    border: 1px solid var(--accentColor);
    color: var(--accentColor);

    svg {
      max-width: 100%;
      display: block;
      width: 32px;
      height: 32px;
    }
  }
</style>
