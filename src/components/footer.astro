---
const currentYear = new Date().getFullYear();

import Icon from "astro-icon";
---

<footer class="footer">
  <h2 class="screen-reader">Footer</h2>
  <div class="footer__content">
    <div>
      <p>
        (c) John Kilpatrick {currentYear}
        <a
          href="//github.com/rjkilpatrick/rjkilpatrick.github.io"
          rel="external">View source</a
        >
      </p>
    </div>
    <div>
      <nav>
        <ul class="social-icons">
          <li>
            <a
              rel="external"
              aria-label="Github"
              href="//github.com/rjkilpatrick"
              class="github"
            >
              <Icon name="mdi:github" class="icon" />
            </a>
          </li>
          <li>
            <a
              rel="external"
              aria-label="Twitter"
              href="//twitter.com/rjkilpatrick1"
              class="twitter"
            >
              <Icon name="mdi:twitter" class="icon" />
            </a>
          </li>
          <li>
            <a
              rel="external"
              aria-label="Linkedin"
              href="//linkedin.com/in/rjkilpatrick"
              class="linkedin"
            >
              <Icon name="mdi:linkedin" class="icon" />
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</footer>

<style lang="scss">
  .footer {
    width: 100%;
    margin-top: 32px;
    padding: 0 2.5rem;
    background: var(--background-secondary);
  }

  .footer__content {
    color: var(--text-secondary);
    padding: 32px 0;
    font-size: 88%;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .social-icons {
    list-style: none;
    display: flex;
    gap: 1rem;

    a,
    a:visited {
      color: inherit;
      display: block;
      // https://brandcolors.net/
      &:hover {
        &.github {
          color: #333333;
        }
        &.linkedin {
          color: #0077b5;
        }
        &.twitter {
          color: #1da1f2;
        }
      }
    }
  }

  .icon {
    height: 2rem;
    width: auto;
    display: block;
  }
</style>
