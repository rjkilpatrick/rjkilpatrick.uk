---
const { form_id } = Astro.props;
---

<form
  id="fs-frm"
  name="contact-form"
  accept-charset="utf-8"
  action={`https://formspree.io/f/${form_id}`}
  method="post"
>
  <fieldset id="fs-frm-inputs">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Johnny" />
    <label for="email-address" class="form-text-required">Email Address</label>
    <input
      type="email"
      name="email"
      id="email-address"
      placeholder="hello@example.com"
      required=""
      class="form-input-required"
    />
    <label for="message" class="form-text-required">Message</label>
    <textarea
      rows="5"
      name="message"
      id="message"
      placeholder="Hi John\n\nHere's what you want\n\nJohn"
      required=""></textarea>
  </fieldset>
  <button form="fs-frm" type="submit" role="button">Submit</button>
</form>
<style lang="scss">
  /* CSS reset */
  input,
  button,
  textarea,
  fieldset,
  label,
  #card-element:disabled {
    font-family: inherit;
    font-size: 100%;
    color: inherit;
    border: none;
    border-radius: 0;
    display: block;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  label,
  legend,
  ::placeholder {
    font-size: 0.825rem;
    margin-bottom: 0.5rem;
    padding-top: 0.2rem;
    display: flex;
    align-items: baseline;
  }

  /* border, padding, margin, width */
  input,
  button,
  textarea,
  #card-element {
    border: 1px solid rgba(0, 0, 0, 0.2);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 0.75rem 1rem;
    margin-bottom: 1.5rem;
  }

  input:focus,
  button:focus,
  textarea:focus {
    background-color: white;
    outline-style: solid;
    outline-width: thin;
    outline-color: gray;
    outline-offset: -1px;
  }

  [type="text"],
  [type="email"] {
    width: 100%;
  }

  [type="button"],
  [type="submit"] {
    width: auto;
    cursor: pointer;
    appearance: button;
  }

  [type="button"]:focus,
  [type="submit"]:focus {
    outline: none;
  }

  [type="submit"] {
    margin-bottom: 0;
  }

  select {
    text-transform: none;
  }

  /* Prevents resizing horizontally */
  textarea {
    resize: vertical;
  }

  .form-text-required {
    &::after {
      content: "*";
      color: rgb(171, 0, 0);
    }
  }
</style>
